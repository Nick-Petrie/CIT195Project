@page "{searchString?}"
@model CIT195Project.Pages.Hawks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <p>
        Search: <input type="text" asp-for="SearchString" />
        Sort by:
        <select asp-for="SortOrder" asp-items="Model.SortOptions">
            <option value="">Select...</option>
            <option value="name">Name</option>
            <option value="latin_name">Latin Name</option>
            <option value="wingspan">Wingspan</option>
            <option value="endangered">Endangered</option>
            <option value="rarity">Rarity</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hawk[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hawk[0].LatinName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hawk[0].Wingspan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hawk[0].IsEndangered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hawk[0].Rarity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Hawk)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LatinName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wingspan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEndangered)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rarity)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
